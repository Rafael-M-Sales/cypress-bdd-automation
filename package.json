{
  "name": "cypress-bdd",
  "version": "1.0.0",
  "description": "Projeto de automação com Cypress + BDD (Cucumber/Gherkin) + TypeScript + Jest",
  "scripts": {
    "test": "cypress run",
    "test:headed": "cypress open",
    "test:unit": "jest",
    "test:unit:watch": "jest --watch",
    "test:unit:coverage": "jest --coverage"
  },
  "devDependencies": {
    "@badeball/cypress-cucumber-preprocessor": "^21.0.2",
    "@bahmutov/cypress-esbuild-preprocessor": "^2.2.3",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.6",
    "cypress": "^13.17.0",
    "esbuild": "^0.24.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.2"
  },
  "cypress-cucumber-preprocessor": {
    "nonGlobalStepDefinitions": false,
    "stepDefinitions": "cypress/e2e/step_definitions/**/*.ts"
  }
}
